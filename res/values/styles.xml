<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	<style name="customButtonStyle">
        <item name="android:layout_width">@dimen/V200dip</item>
        <item name="android:layout_height">@dimen/V75dip</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_selector</item>
        <item name="android:textSize">@dimen/V18dip</item>
        <item name="android:background">@drawable/custom_button_selector</item>
        <item name="android:layout_marginTop">@dimen/V10dip</item>
        <item name="android:layout_marginBottom">@dimen/V5dip</item>
    </style>
</resources>
